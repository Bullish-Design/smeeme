# SmeeMe Environment Configuration
# Copy this file to .env and update the values for your setup

# Smee.io channel URL (create one at https://smee.io/new)
SMEE_URL=https://smee.io/your-unique-channel-id

# Local webhook target URL where you want webhooks forwarded
TARGET_URL=http://localhost:3000

# Optional: Specific path for webhook forwarding
TARGET_PATH=/webhooks

# Port for smee client (default: 3001)
SMEE_PORT=3001

# Logging configuration
LOG_LEVEL=info

# Client behavior
AUTO_RESTART=true
MAX_RETRIES=5
RETRY_DELAY=2.0

# Development settings
NODE_ENV=development
DEBUG=false

# Working directory for smee client (optional)
# WORKING_DIRECTORY=/path/to/your/project

# Custom environment variables for smee client process
# CUSTOM_ENV_VAR=value
